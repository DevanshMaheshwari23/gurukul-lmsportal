{
  "version": 2,
  "buildCommand": "cd gurukul && npm install && npm run build",
  "outputDirectory": "gurukul/.next",
  "framework": "nextjs",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/gurukul/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/gurukul/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 